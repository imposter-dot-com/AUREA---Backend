# MongoDB Configuration
MONGODB_URI=

# JWT Configuration
JWT_SECRET=

# Server Configuration
PORT=
NODE_ENV=

# Frontend Configuration
FRONTEND_URL=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# PDF Generation Configuration (Performance Optimizations)
# Browser pool size for concurrent PDF generation (default: 3)
PDF_BROWSER_POOL_SIZE=3

# Browser idle timeout in milliseconds (default: 300000 = 5 minutes)
PDF_BROWSER_IDLE_TIMEOUT=300000

# Enable PDF caching (default: true)
PDF_CACHE_ENABLED=true

# Cache TTL in seconds (default: 300 = 5 minutes)
PDF_CACHE_TTL=300

# Maximum cache size (number of PDFs, default: 100)
PDF_CACHE_MAX_SIZE=100

# Maximum cache memory in MB (default: 500)
PDF_CACHE_MAX_MEMORY=500

# Enable fast mode for quicker PDF generation (default: false)
# Fast mode skips some wait times and image loading for faster generation
PDF_FAST_MODE=false

# Maximum timeout for PDF generation in milliseconds (default: 10000)
PDF_MAX_TIMEOUT=10000

# Skip waiting for images to load (default: false)
PDF_SKIP_IMAGE_WAIT=false

# Enable debug mode to save screenshots and HTML (default: false)
PDF_DEBUG=false
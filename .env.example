# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aurea

# JWT Configuration
JWT_SECRET=your-secret-key

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Puppeteer Configuration (Production - Railway/Heroku/Docker)
# Set to 'true' if using nixpacks.toml or custom Dockerfile with Chromium
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
# Optional: Specify custom Chrome/Chromium path
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium